Image ${name}ImageFilter::Execute ( double constant, const Image& image2$(include MemberParameters.in) )
{
$(foreach members
$(if (not no_set_method) or (no_set_method == 0) then
OUT = '  this->Set${name} ( in${name} );'
end)
)
return this->Execute ( constant, image2 );
}
]]
end)



$(include ExecuteNoParameters.cxx.in)

Image ${name}ImageFilter::Execute ( double constant, const Image& image2 )
{

  PixelIDValueType type = image2.GetPixelIDValue();
  unsigned int dimension = image2.GetDimension();

  return this->m_MemberFactory1->GetMemberFunction( type, dimension )( constant, image2 );
}

Image ${name}ImageFilter::Execute ( const Image& image1, double constant )
{

  PixelIDValueType type = image1.GetPixelIDValue();
  unsigned int dimension = image1.GetDimension();


  return this->m_MemberFactory2->GetMemberFunction( type, dimension )( image1, constant );
}

