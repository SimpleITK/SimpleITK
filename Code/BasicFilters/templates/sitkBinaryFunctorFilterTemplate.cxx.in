namespace {
template <typename TPixel>
static void ToPixelType( double inPixel, TPixel &outPixel)
{
  outPixel = static_cast<TPixel>( inPixel );
}

template <typename TComponent>
static void ToPixelType( double inPixel, itk::VariableLengthVector<TComponent> &outPixel)
{
  outPixel.Fill( static_cast<TComponent>( inPixel ) );
}
}

