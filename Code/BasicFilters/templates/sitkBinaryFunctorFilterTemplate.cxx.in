$(include ExecuteInternalVectorImages.cxx.in)
$(include FunctionalAPI.cxx.in)

Image ${name} ( const Image& image1, double constant$(include MemberParameters.in) )
{
  ${name}ImageFilter filter;
  return filter.Execute ( image1, constant$(for i = 1,#members do
                            if (number_of_inputs > 0 or i > 1) then
                              OUT = OUT .. ", "
                            end
                            OUT= OUT .. ' in' .. members[i].name
                            end) );
}

Image ${name} ( double constant, const Image& image2$(include MemberParameters.in) )
{
  ${name}ImageFilter filter;
  return filter.Execute ( constant, image2$(for i = 1,#members do
                            if (number_of_inputs > 0 or i > 1) then
                              OUT = OUT .. ", "
                            end
                            OUT= OUT .. ' in' .. members[i].name
                            end) );
}

